<!-- Layout for AccountActivity -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">


        <LinearLayout
            android:id="@+id/activity_new_account_email_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/email"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/activity_new_account_email_label"
                android:textColor="@color/primaryText" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/email_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/activity_new_account_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/primaryText" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/activity_new_account_password_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_new_account_email_block"
            android:orientation="horizontal"
            android:paddingTop="10dp">


            <TextView
                android:id="@+id/pswd"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/activity_new_account_password_label"
                android:textColor="@color/primaryText" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/mpassword_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/activity_new_account_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="mot de passe"
                    android:inputType="textPassword"

                    android:textColor="@color/primaryText" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/activity_new_account_confirm_password_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_new_account_password_block"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/confpswd"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/activity_new_account_confirm_password_label"
                android:textColor="@color/primaryText" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/conf_password_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/activity_new_account_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="confirmer mot de passe"
                    android:inputType="textPassword"
                    android:textColor="@color/primaryText" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_new_account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_new_account_confirm_password_block"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:text="@string/Name"
                android:layout_gravity="center"
                android:textColor="@color/primaryText" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/name_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/new_name"
                    android:hint="Nom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    android:textColor="@color/primaryText" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_new_account_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_new_account_name"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/surname"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:text="@string/Surname"
                android:layout_gravity="center"
                android:textColor="@color/primaryText" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lastname_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/new_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Prenom"
                    android:inputType="textPersonName"
                    android:textColor="@color/primaryText" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_new_account_errorPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/activity_new_account_surname"
            android:paddingTop="10dp">


            <TextView
                android:id="@+id/errorPswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_new_account_errorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/activity_new_account_errorPwd"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/errorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_new_account_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/activity_new_account_errorName"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/errorPswd"
                android:layout_weight="1"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/activity_new_account_error"
            android:paddingTop="10dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/activity_new_account_next_step_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_background"
                    android:text="@string/activity_new_account_next_step_button"
                    android:textColor="@android:color/white" />

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>
</ScrollView><!-- From: file:/C:/Users/PBA3360/Documents/Stage2015/TalentMapLiteVolley/TalentMapLiteWithVolley/app/src/main/res/layout/activity_new_account_activity.xml -->