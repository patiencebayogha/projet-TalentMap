<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.patiencebayogha.talentmaplitewithvolley">


    <!--
    Required permission to use in-app billing and Media Permissions
    -->

    <!-- Allow access to internet/wifi/network state -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Get permission to Write (and implicitly Read) to publicly accessible external storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:name=".singletons.AppController"
        android:icon="@drawable/favicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.AccountActivity"
            android:label="@string/title_activity_New_Account"
            android:screenOrientation="portrait">  </activity>

        <activity
            android:name=".activities.ActivationActivity"
            android:label="@string/title_activity_New_Account"
            android:screenOrientation="portrait"> </activity>

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_MainActivity"
            android:screenOrientation="portrait">

        </activity>


        <activity
            android:name=".activities.SearchGetProfilUsersActivity"
            android:label="@string/title_activity_SearchGetProfilUsersActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".activities.SearchFilterActivity"
            android:label="@string/title_activity_SearchFilterActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".activities.SkillsActivity"
            android:label="@string/title_activity_SkillsActivity"
            android:screenOrientation="portrait">

        </activity>

    </application>

</manifest>
