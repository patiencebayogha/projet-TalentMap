<resources>

    <!-- Base application theme. -->

    <!-- Base application theme.
     Defining this lets values-v21/styles.xml reuse it with changes. -->
    <style name="AppTheme" parent="android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/white</item>

        <!-- colorPrimary is used, for instance, for the default ActionBar
      (but not Toolbar) background.-->
        <item name="android:colorPrimary">@color/cyan_primary</item>

        <!-- colorPrimaryDark is used for the status bar . -->
        <item name="android:colorPrimaryDark">@color/cyan_primary_dark</item>
        <item name="android:colorAccent">@color/cyan_primary</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>


    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/cyan_primary</item>
    </style>


</resources>
