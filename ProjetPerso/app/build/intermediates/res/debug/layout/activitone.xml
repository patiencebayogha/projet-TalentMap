<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal">



    <android.support.design.widget.TabLayout
        android:id="@+id/sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        android:background="#DDAFFA"
        app:tabGravity="fill" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/view"
        android:layout_below="@+id/sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <EditText
            android:id="@+id/example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ABFABA"
            android:text="Picasso vs Glide" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pointedenis"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imView"
        android:src="@drawable/pointedenis"
        android:layout_alignRight="@+id/imView"
        android:layout_alignEnd="@+id/imView" />
</RelativeLayout><!-- From: file:/C:/Users/PBA3360/Documents/projet-TalentMap/ProjetPerso/app/src/main/res/layout/activitone.xml -->