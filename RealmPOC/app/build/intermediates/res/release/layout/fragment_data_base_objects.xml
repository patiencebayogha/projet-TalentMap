<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relation_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RelationActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.novedia.realmpoc.CapitalizedTextViewActivity
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_primary_dark"
            android:orientation="horizontal">

            <com.example.novedia.realmpoc.CapitalizedTextViewActivity

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Title:"
                android:textSize="17dp" />

            <com.example.novedia.realmpoc.CapitalizedTextViewActivity

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Price:"
                android:textSize="17dp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/getAllButton">


            <ListView
                android:id="@+id/resultListView"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="25dp"
                android:layout_weight="1"
                android:listSelector="@color/red_primary" />

            <Button
                android:id="@+id/deleteAllBook"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/resultListView"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_background"
                android:drawableLeft="@drawable/cross"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:src="@drawable/cross"
                android:text="delete All"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/insertBook"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:background="@drawable/btn_background"
                android:drawableLeft="@drawable/add"
                android:elevation="1dp"
                android:text="add book"
                android:textColor="@android:color/white"
                android:layout_alignBottom="@+id/deleteAllBook"
                android:layout_alignTop="@+id/deleteAllBook" />

            <Button
                android:id="@+id/filters"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/deleteAllBook"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/btn_background"
                android:text="Filter book by criteria"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/getAllButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/filters"
                android:layout_weight="1"
                android:background="@drawable/btn_background"
                android:text="Remove the filter "
                android:textColor="@android:color/white" />


        </RelativeLayout>
    </LinearLayout>
</ScrollView>
