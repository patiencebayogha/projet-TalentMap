<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text"
        android:layout_weight="3"
        android:orientation="horizontal">

        <com.example.novedia.realmpoc.CapitalizedTextViewActivity
            android:id="@+id/person_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="17dp" />

        <com.example.novedia.realmpoc.CapitalizedTextViewActivity
            android:id="@+id/person_age"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="17dp" />


        <com.example.novedia.realmpoc.CapitalizedTextViewActivity
            android:id="@+id/choiceBook"
            android:layout_width="84dp"
            android:layout_height="39dp"
            android:layout_margin="5dp"
            android:background="@drawable/btn_background"
            android:text="buy book"
            android:textColor="@android:color/white"
            android:textAlignment="center" />

    </LinearLayout>
</RelativeLayout><!-- From: file:/C:/Users/PBA3360/Documents/POC/RealmPOC/app/src/main/res/layout/person_item.xml -->