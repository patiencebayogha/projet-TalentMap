<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relation_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RelationActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:padding="10dp"
                android:text="DataBase Books: Titles and prices"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/getAllButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="Get all Objects"
            android:textColor="@android:color/white" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getAllButton">


            <ListView
                android:id="@+id/resultListView"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="25dp"
                android:layout_weight="1"
                android:listSelector="@color/red_primary"
                android:paddingEnd="15dp"/>

            <Button
                android:id="@+id/deleteAllBook"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/resultListView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:background="@drawable/btn_background"
                android:drawableLeft="@drawable/cross"
                android:elevation="1dp"
                android:src="@drawable/cross"
                android:text="delete All"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/insertBook"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/btn_background"
                android:drawableLeft="@drawable/add"
                android:elevation="1dp"
                android:text="add book"
                android:textColor="@android:color/white"
                android:layout_alignTop="@+id/deleteAllBook"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
